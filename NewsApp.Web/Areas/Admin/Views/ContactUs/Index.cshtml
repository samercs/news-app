@model IEnumerable<NewsApp.Web.Models.ContactUs>

@{
    ViewBag.Title = "inbox";
}

<h2>Inbox</h2>


<table class="table table-responsive table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.AddedDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr  style="@(item.IsRead? "" : "font-weight: bold;")">
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddedDate)
        </td>
        <td>
            @Html.ActionLink("Read", "Details", new { id=item.ContactUsId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ContactUsId })
        </td>
    </tr>
}

</table>
