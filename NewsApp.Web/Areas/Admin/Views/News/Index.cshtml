@model IEnumerable<NewsApp.Web.Models.News>

@{
    ViewBag.Title = "News";
}

<h2>@ViewBag.Title</h2>

<p class="text-right">
    <a href="@Url.Action("Create", "News")" class="btn btn-primary">Create New</a>
</p>
<table class="table table-responsive table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img style="width: 100px;" src="@item.Image" class="img-thumbnail img-circle" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.NewsId }) |
            @Html.ActionLink("Details", "Details", new { id=item.NewsId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.NewsId })
        </td>
    </tr>
}

</table>
